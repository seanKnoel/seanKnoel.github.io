<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
</head>
<body>
// Define the quiz questions and answers
var questions = [  {    question: "What is your favorite color?",    answers: [      {text: "Blue", result: "introverted"},      {text: "Red", result: "extroverted"},      {text: "Green", result: "analytical"},      {text: "Purple", result: "creative"}    ]
  },
  {
    question: "What do you enjoy doing in your free time?",
    answers: [
      {text: "Reading", result: "introverted"},
      {text: "Socializing", result: "extroverted"},
      {text: "Solving puzzles", result: "analytical"},
      {text: "Creating art", result: "creative"}
    ]
  },
  // Add more questions here...
];

// Set the initial result to an empty string
var result = "";

// Display the first question and answer choices
text(questions[0].question, 20, 20);
for (var i = 0; i < questions[0].answers.length; i++) {
  text(questions[0].answers[i].text, 20, 50 + i * 30);
}

// Set the index for the current question to 0
var currentQuestion = 0;

// When the user clicks on an answer, update the result and move on to the next question
mouseClicked = function() {
  for (var i = 0; i < questions[currentQuestion].answers.length; i++) {
    if (mouseY > 50 + i * 30 && mouseY < 80 + i * 30) {
      result += questions[currentQuestion].answers[i].result + " ";
      currentQuestion++;
      if (currentQuestion < questions.length) {
        // Display the next question and answer choices
        text(questions[currentQuestion].question, 20, 20);
        for (var j = 0; j < questions[currentQuestion].answers.length; j++) {
          text(questions[currentQuestion].answers[j].text, 20, 50 + j * 30);
        }
      } else {
        // The quiz is complete, so display the result
        text("Your personality is: " + result, 20, 20);
      }
      break;
    }
  }
};



</body>
</html>
